{% extends 'base.html.twig' %}

{% block body %}
    <div style="width: 800px; margin: auto; border: 1px solid lavender; padding: 20px; padding-top: 60px; margin-bottom: 100px;" >
        <h1 class="text-success bg-info">
            <span class="text-info">Search results for '<span class="text-primary">{{ search_text }}</span>' :</span>
        </h1>
        {% if posts is empty %}
            <h2>Nothing found...</h2>
        {% endif %}

        {% if posts is not empty %}

            {% for post in posts %}

                <h3>{{ post.title }}</h3>
                <div>
                    {% if post.webPath is not null %}
                        <img src="{{ post.webPath | imagine_filter('my_thumb') }}" alt="image">
                    {% endif %}
                    <br>
                    {{ post.text|length > 600 ? post.text|slice(0, 600) ~ '...' :post.text }}<br>
                    <a href="{{ path('show_post', {'slug': post.slug}) }}"><span class="text-primary">Read more...</span></a>
                </div>
            {% endfor %}

        {% endif %}
    </div>



{% endblock %}

