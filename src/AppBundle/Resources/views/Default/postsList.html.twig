{% for post in posts %}

    <div class="blog-article">
        <h3 class="h3 text-left img-rounded post-title">
            <a href="{{ path('show_post', {'slug': post.slug}) }}">
                {{ post.title }}
            </a>
            <span class="pull-right" style="color: whitesmoke">
                <i class="glyphicon glyphicon-star"></i> {{ post.rating|number_format(2, '.', ',') }}
            </span>

        </h3>

        {% if post.author.smallAvatar is not null %}
            <img src="{{ post.author.smallAvatar }}" class="img-circle">
        {% endif %}
        Author:
        <a href="{{ path('show_author_posts', {'slug': post.author.slug}) }}">
            <span class="author-name">{{ post.author.name }}</span>
        </a>
        <span class="pull-right">
            <i class="glyphicon glyphicon-time"></i> {{ post.createdAt|date('d M Y') }}
        </span>

        <div class="clearfix img-rounded" style="padding: 15px">
            <div class="pull-left" style="padding-top: 25px">
                {% if post.webPath is not null %}
                    <img src="{{ post.webPath | imagine_filter('my_thumb') }}" alt="image" class="img-rounded">
                {% endif %}
            </div>
            <div class="pull-right post-preview">

                {{ post.text|nl2br |length > 360 ? post.text|slice(0, 360) ~ '...' :post.text }}<br>

                <div class="read-more pull-right">
                    <a href="{{ path('show_post', { 'slug': post.slug }) }}">
                        Read more <i class="glyphicon glyphicon-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>


    </div>
{% endfor %}
{% if nextPageUrl %}
    <div class="pagination" style="display: none">
        <span class="next-page">
            <a href="{{ nextPageUrl }}">&gt;</a>
        </span>
    </div>
{% endif %}