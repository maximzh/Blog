    <div class="search-results-container">

        <h1 class="text-center"><span style="color: #7a43b6">{{ count }}</span> posts have tag <span style="color: #7a43b6">#{{ tag }}</span></h1>
        {% if posts is not empty %}
            <div class="container-fluid">
                <div class="row">

                    <div class="body-container img-rounded col-md-6 col-md-offset-3" style="padding: 15px">

                        {% include 'AppBundle:Default:postsList.html.twig' %}

                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>



        {% endif %}

    </div>

{% endblock %}