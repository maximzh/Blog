<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/app.css') }}" rel="stylesheet"/>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block header %}
    <div id="admin-header-menu" style="height: 50px; background-color: lightgrey; z-index: 10000; position: fixed; top: 0px; width: 100%">
        <nav class="header-menu">

            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ path('manage_posts') }}">Posts</a>
                </li>
                <li>
                    <a href="{{ path('manage_tags') }}">Tags</a>
                </li>
                <li>
                    <a href="{{ path('manage_comments') }}">Comments</a>
                </li>
            </ul>
        </nav>
    </div>
    <div style="margin-top: 50px"></div>

{% endblock %}
{% block body %}{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
{% endblock %}
</body>
</html>